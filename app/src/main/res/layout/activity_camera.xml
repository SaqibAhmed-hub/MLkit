<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CameraActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:text="@string/text_detect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/text_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:text="@string/face_detect"
        app:layout_constraintTop_toBottomOf="@id/text_btn"
        app:layout_constraintBottom_toTopOf="@id/object_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/face_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:text="@string/object_detect"
        app:layout_constraintTop_toBottomOf="@id/face_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/object_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>